<section class="section">
<h2 class="title">Create New Post</h2>

<form class="new-post-form control">
    <input class="input p-2 m-2" type="text" id="post-title" name="post-title" placeholder="Title" />
    <input class="input p-2 m-2" id="post-url" name="post-url" placeholder="Link" />
    <button class="button is-link p-2 m-2" type="submit" >Create</button>
</form>
</section>

{{#if posts.length}}
<section class="section">
<h2 class="title">Your Posts</h2>
<ul class=px-3>
{{#each posts as |post|}}
<li class="py-2">
    {{> post-info post}}
    <a href="/dashboard/edit/{{post.id}}" class="edit-link subtitle text-is-link">Edit post</a>
</li>
{{/each}}
</ul>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>